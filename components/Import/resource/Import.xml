<?xml version="1.0" encoding="UTF-8"?>
<context>
  <dll path="Import"/>
  <beans>
    <call bean="Core.MainWindow" method="toCentralWidget">
      <bean name="Import.ImportDialog"/>
    </call>

    <bean name="Import.ImportDialog" class="Geo::Import::ImportDialog">
      <!--<bean name="Core.MainWindow"/>-->
    </bean>

<!--==============-->
    <bean name="Import.Menu" bean="Import.ImportUiFactory" method="getImportMenu"/>

    <bean name="Import.ImportUiFactory" class="Geo::Import::ImportUiFactory">
      <method name="getImportMenu" type="factory"/>
    </bean>

    <call bean="Core.MainWindow" method="addMenu">
      <bean name="Import.Menu"/>
    </call>

<!--==============-->

    <bean name="Import.ToolBar" bean="Import.ImportUiFactory" method="getImportToolBar"/>

    <bean name="Import.ImportUiFactory" class="Geo::Import::ImportUiFactory">
      <method name="getImportToolBar" type="factory"/>
    </bean>

    <call bean="Core.MainWindow" method="addToolBar">
      <bean name="Import.ToolBar"/>
    </call>

  </beans>
</context>
