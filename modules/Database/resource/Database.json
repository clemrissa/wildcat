{
  "module" : {
    "name" : "Database",

    "path" : "../modules",

    "components" : [
      {
        "name" : "SQLiteConnection",

        "construction" : "prototype"
      },

      {
        "name" : "Database.Menu",

        "construction" : "factory",

        "factory" : "DatabaseUiFactory",

        "function" : "createDatabaseMenu"
      },

      {
        "name" : "DatabaseUiFactory",

        "construction" : "singleton",

        "functions" : [
          {
            "name" : "createDatabaseMenu"
          }
        ]
      },

      {
