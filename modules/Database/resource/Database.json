        "class" : "ConnectionManager",

        "construction" : "singleton"
      }

    ],

    "calls" : [
      {
        "component" : "Core.MainWindow",

        "function" : "addMenu",

        "parameters" : [
          { "component" : "Database.Menu" }
        ]
      }
    ]
  }
}
