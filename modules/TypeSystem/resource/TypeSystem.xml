<?xml version="1.0" encoding="UTF-8"?>
<context>
  <dll path="TypeSystem"/>
  <beans>
    <!--ui factory with factory method which retures menu-->
    <bean name="TypeSystem.TypeSystemUiFactory" class="Geo::TypeSystem::TypeSystemUiFactory">
      <method name="createTypeSystemMenu" type="factory"/>
    </bean>

    <!--menu produced by ui factory-->
    <bean name="TypeSystem.Menu" bean="TypeSystem.TypeSystemUiFactory" method = "createTypeSystemMenu"/>

    <!--[>calls <]-->

    <call bean="Core.MainWindow" method="addMenu">
      <bean name="TypeSystem.Menu"/>
    </call>


  </beans>
</context>
